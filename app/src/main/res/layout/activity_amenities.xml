<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="#354571"
    tools:context=".AmenitiesActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:stretchColumns="*">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Amenities"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFFFFF"/>

        <TableRow>
            <Button
                android:background="@drawable/rounded"
                android:layout_margin="5dp"
                android:textSize="15dp"
                android:textColor="#FFFFFF"

                android:id="@+id/earphones_btn"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="earphones"
                android:onClick = "earphones_bnt"

                />

            <Button
                android:background="@drawable/rounded"
                android:layout_margin="5dp"
                android:textSize="15dp"
                android:textColor="#FFFFFF"

                android:id="@+id/blanket_bnt"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="blanket"
                android:onClick = "blanket_bnt"
                />
        </TableRow>

        <TableRow>
            <Button
                android:background="@drawable/rounded"
                android:layout_margin="5dp"
                android:textSize="15dp"
                android:textColor="#FFFFFF"

                android:id="@+id/pillow_bnt"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="Pillow"
                android:onClick = "pillow_bnt"
                />

            <Button
                android:background="@drawable/rounded"
                android:layout_margin="5dp"
                android:textSize="15dp"
                android:textColor="#FFFFFF"

                android:id="@+id/slippers_bnt"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="Slippers"
                android:onClick = "slippers_bnt"
                />
        </TableRow>

        <TableRow>
            <Button
                android:background="@drawable/rounded"
                android:layout_margin="5dp"
                android:textSize="15dp"
                android:textColor="#FFFFFF"

                android:id="@+id/eye_patch_bnt"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="Eye patch"
                android:onClick = "eye_patch_bnt"
                />

            <Button
                android:background="@drawable/rounded"
                android:layout_margin="5dp"
                android:textSize="15dp"
                android:textColor="#FFFFFF"

                android:id="@+id/earplug_bnt"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="earplug"
                android:onClick = "earplug_bnt"
                />
        </TableRow>

        <TableRow>
            <Button
                android:background="@drawable/rounded"
                android:layout_margin="5dp"
                android:textSize="15dp"
                android:textColor="#FFFFFF"

                android:id="@+id/newspaper_bnt"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="newspaper"
                android:onClick = "newspaper_bnt"
                />

            <Button
                android:background="@drawable/rounded"
                android:layout_margin="5dp"
                android:textSize="15dp"
                android:textColor="#FFFFFF"

                android:id="@+id/pen_bnt"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="pen"
                android:onClick = "pen_bnt"
                />
        </TableRow>
    </TableLayout>
</ScrollView>